@model IEnumerable<ResumeCreator.Models.ProfileData>

@{
    ViewData["Title"] = "List";
}

<h1>Perfiles</h1>

<p>
    @Html.ActionLink("Crear Nuevo Perfil","New","DatosPersonales")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre de Usuario
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                Es Cuenta Propia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DNI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsMainProfile)
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Deletear","ProfileData", new { Id=item.Id })
                    @Html.ActionLink("Edit", "Edit","ProfileData", new { Id=item.Id })
                    @Html.ActionLink("Agregar Estudios", "List","Formation", new { Id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
